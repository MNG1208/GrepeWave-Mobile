<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/rectangle"
        android:layout_centerHorizontal="true"
        android:background="@color/purple"
        android:layout_marginRight="0dp"/>

    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/circleView"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:shape="oval"
        android:layout_marginTop="150dp"/>

    <View
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:id="@+id/circleView2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logogrp"
        android:shape="oval"
        android:layout_marginTop="155dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GrapeWave"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Limack"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a GrapeWave"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crea tu inventario de forma eficiente,\n consulta reportes de venta y administra\n tu negocio desde donde estÃ©s"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:gravity="center"/>


    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:backgroundTint="@color/green"
        android:gravity="center"
        android:text="Comenzar"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginTop="650dp"
        android:layout_centerHorizontal="true"
        app:cornerRadius="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/termsAndCon"
        android:text="Terminos condiciones y contacto"
        android:textColor="@color/green"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="800dp"/>

</RelativeLayout>

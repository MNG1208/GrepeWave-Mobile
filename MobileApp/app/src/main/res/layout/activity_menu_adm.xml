<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuAdm"
    android:background="@color/black"
    android:padding="30dp">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/logosmall"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Administrador"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_width="800dp"
        android:layout_height="3dp"
        android:background="@color/grey"
        android:layout_marginTop="80dp"/>

    <ImageButton
        android:layout_width="160dp"
        android:id="@+id/btnEmpleados"
        android:layout_height="160dp"
        android:src="@drawable/empleados"
        android:scaleType="centerInside"
        android:layout_marginTop="120dp"
        android:padding="6dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        />

    <ImageButton
        android:layout_width="160dp"
        android:id="@+id/btnInformes"
        android:layout_height="160dp"
        android:src="@drawable/informes"
        android:scaleType="centerInside"
        android:layout_marginTop="310dp"
        android:padding="6dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button2"
        />

    <ImageButton
        android:layout_width="160dp"
        android:id="@+id/btnInventario"
        android:layout_height="160dp"
        android:src="@drawable/inventario"
        android:scaleType="centerInside"
        android:layout_marginTop="510dp"
        android:padding="6dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button2"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Empleados"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Informes"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Inventario"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"/>



</RelativeLayout>